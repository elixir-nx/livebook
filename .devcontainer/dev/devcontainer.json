// For format details, see https://aka.ms/devcontainer.json.
// Also see https://github.com/microsoft/vscode-dev-containers/tree/v0.231.6/containers/elixir-phoenix-postgres
{
  "name": "Livebook development environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "livebook_dev",
  "workspaceFolder": "/workspaces/livebook",
  "extensions": ["jakebecker.elixir-ls"],
  "forwardPorts": [4000, 4001, 8080, 8081],
  
  // The final codespace container is missing hex/rebar/dependencies without these create commands, despite what the Dockerfile suggests
	"onCreateCommand": "mix local.hex --force && mix local.rebar --force",
  "updateContentCommand": "mix dev.setup && mix do deps.compile, compile",
  "postCreateCommand": "mix phx.server",

  "settings": {
    // Needed because of: https://github.com/microsoft/vscode/issues/102057#issuecomment-657728467
    "debug.javascript.autoAttachFilter": "onlyWithFlag",
    "debug.javascript.autoAttachSmartPattern": [
      "!**/node_modules/**",
      "**/$KNOWN_TOOLS$/**"
    ]
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/workspaces/livebook/.mix/escripts",
    "LOCAL_USER_PATH": "/workspaces/livebook"
  }
}
